    "@graphql-codegen/typescript-mongodb": "3.0.0",
    "@graphql-codegen/introspection": "4.0.3"
  },
  "scripts": {
    "build": "tsc",
    "start": "nodemon --watch 'src/**/*.ts' --exec ts-node -r tsconfig-paths/register src/index.ts",
    "start:prod": "node dist/index.js",
    "migrate:up": "ts-node -r tsconfig-paths/register scripts/migration.ts up",
    "migrate:down": "ts-node -r tsconfig-paths/register scripts/migration.ts down",
    "migrate:seed": "ts-node -r tsconfig-paths/register scripts/seed.ts",
    "codegen": "graphql-codegen --config codegen.ts"
  }
}