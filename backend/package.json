    "@koa/router": "^13.1.0",
    "bcryptjs": "^3.0.2",
    "dotenv": "^16.4.1",
    "graphql": "^16.11.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "koa": "^2.16.1",
    "koa-bodyparser": "^4.4.1",
    "koa-router": "^13.0.1",
    "mongoose": "^8.14.1",
    "nodemon": "^3.1.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "5.0.6",
    "@graphql-codegen/typescript": "4.1.6",
    "@graphql-codegen/typescript-resolvers": "4.5.1",
    "@types/dotenv": "^8.0.4",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/koa": "^2.13.6",
    "@types/koa__cors": "^5.0.0",
